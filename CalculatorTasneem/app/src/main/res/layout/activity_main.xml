<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4A0E3AEC"
    android:backgroundTint="#4A0E3AEC"
    android:foregroundTint="#3F51B5"
    android:scrollbarThumbHorizontal="@color/purple_700"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:srcCompat="@drawable/beemoo" />

    <TextView
        android:id="@+id/FirstNumber"
        android:layout_width="92dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="604dp"
        android:layout_marginEnd="301dp"

        android:layout_marginRight="267dp"
        android:layout_marginBottom="106dp"
        android:background="#2F2F97"
        android:backgroundTint="#2F2F97"
        android:text="First Number"
        android:textColor="#F8F7F7"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/SecondNumber"
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="115dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="605dp"
        android:layout_marginEnd="192dp"

        android:layout_marginRight="200dp"
        android:layout_marginBottom="104dp"
        android:background="#2F2F97"
        android:text="Second Number"
        android:textColor="#FAF9F9"
        android:textSize="14sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/calculate"
        android:layout_width="49dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="109dp"
        android:layout_marginBottom="98dp"
        android:backgroundTint="#00F61B65"
        android:text="="
        android:textSize="48sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Addition"
        android:layout_width="67dp"
        android:layout_height="73dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="275dp"
        android:layout_marginBottom="182dp"
        android:backgroundTint="#00E3E333"
        android:shadowColor="#02FFFFFF"
        android:text="+"
        android:textSize="48sp"
        app:iconTint="#0AFFFFFF"
        app:rippleColor="#0AFFFFFF" />

    <Button
        android:id="@+id/Multiplication"
        android:layout_width="61dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="162dp"
        android:backgroundTint="#0255C555"
        android:text="x"
        android:textSize="24sp" />

    <Button
        android:id="@+id/Subtraction"
        android:layout_width="74dp"
        android:layout_height="59dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="102dp"
        android:layout_marginBottom="199dp"
        android:backgroundTint="#00100909"
        android:text="-"
        android:textSize="48sp" />

    <Button
        android:id="@+id/Division"
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="173dp"
        android:layout_marginBottom="285dp"
        android:backgroundTint="#05090606"
        android:text="รท"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/frst"
        android:layout_width="92dp"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="297dp"
        android:layout_marginBottom="14dp"
        android:backgroundTint="#425034"
        android:ems="10"
        android:hint="Enter"
        android:inputType="textPersonName"
        android:textSize="34sp" />

    <EditText
        android:id="@+id/scnd"
        android:layout_width="104dp"
        android:layout_height="88dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="192dp"
        android:layout_marginBottom="14dp"
        android:backgroundTint="#425034"
        android:ems="10"
        android:hint="Enter"
        android:inputType="textPersonName"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/Title"
        android:layout_width="91dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="320dp"
        android:layout_marginBottom="690dp"
        android:text="Calculator"
        android:textColor="#F8F6F4"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Thankyou"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="320dp"
        android:layout_marginTop="705dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="5dp"
        android:text="Thank you!"
        android:textColor="#2A5541"
        android:textSize="14sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/Result"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="143dp"
        android:layout_marginBottom="562dp"
        android:background="#FFFFFF"
        android:backgroundTint="#DA133314"
        android:text="0000000"
        android:textColor="#090606"
        android:textSize="34sp" />

</RelativeLayout>